<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="620.0" prefWidth="900.0" style="-fx-background-color: #f8f9fa;"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ChatClientController">

    <!-- 🔵 HEADER -->
    <top>
        <VBox spacing="8" style="-fx-background-color: linear-gradient(to right, #1976D2, #2196F3); -fx-padding: 15;">
            <Label text="💬 Chat Room Client - VKU" textFill="WHITE">
                <font><Font name="Segoe UI Bold" size="22.0"/></font>
            </Label>

            <!-- Kết nối -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Server:" textFill="WHITE"/>
                <TextField fx:id="txtServerIP" prefWidth="110"/>

                <Label text="Port:" textFill="WHITE"/>
                <TextField fx:id="txtPort" prefWidth="70"/>

                <Label text="Tên:" textFill="WHITE"/>
                <TextField fx:id="txtUsername" prefHeight="26.0" prefWidth="161.0" promptText="Tên của bạn"/>

                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="btnConnect" onAction="#handleConnect"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"
                        text="Kết nối"/>
                <Button fx:id="btnDisconnect" onAction="#handleDisconnect"
                        style="-fx-background-color: #E53935; -fx-text-fill: white; -fx-font-weight: bold;"
                        text="Ngắt"/>
            </HBox>

            <!-- Phòng chat -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Phòng:" textFill="WHITE"/>
                <ChoiceBox fx:id="choiceGroup" prefWidth="140"/>
                <Button fx:id="btnJoin" onAction="#handleJoinGroup"
                        style="-fx-background-color: #FFB300; -fx-text-fill: white; -fx-font-weight: bold;"
                        text="Tham gia"/>
                <Button fx:id="btnLeave" onAction="#handleLeaveGroup"
                        style="-fx-background-color: #8E24AA; -fx-text-fill: white; -fx-font-weight: bold;"
                        text="Rời"/>
                <Label fx:id="lblCurrentGroup" style="-fx-font-weight: bold;"
                       text="Chưa vào phòng" textFill="WHITE"/>
            </HBox>
        </VBox>
    </top>

    <!-- 🟢 KHUNG CHAT CHÍNH -->
    <center>
        <VBox spacing="10" style="-fx-padding: 15;">
            <Label text="💭 Khu vực trò chuyện">
                <font><Font name="Segoe UI Bold" size="15.0"/></font>
            </Label>

            <TextArea fx:id="txtChatArea" editable="false"
                      style="-fx-font-size: 13px; -fx-background-color: #ffffff; -fx-border-color: #ddd;
                             -fx-border-radius: 6; -fx-background-radius: 6;"
                      wrapText="true" VBox.vgrow="ALWAYS"/>

            <!-- Chọn chế độ chat -->
            <HBox alignment="CENTER_LEFT" spacing="15">
                <RadioButton fx:id="rdoChatAll"
                             text="Chat Chung"
                             onAction="#handleChatModeChange"/>
                <RadioButton fx:id="rdoChatPrivate"
                             text="Chat Riêng"
                             onAction="#handleChatModeChange"/>
                <RadioButton fx:id="rdoChatGroup"
                             text="Chat Nhóm"
                             onAction="#handleChatModeChange"/>
                <Label fx:id="lblTarget" text="Chọn:"/>
                <ChoiceBox fx:id="choiceTarget" prefWidth="160"/>
            </HBox>

            <!-- Gửi tin -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <TextField fx:id="txtMessage" onAction="#handleSend" promptText="Nhập tin nhắn..."
                           style="-fx-background-radius: 8; -fx-border-radius: 8;" HBox.hgrow="ALWAYS"/>
                <Button fx:id="btnSend" onAction="#handleSend" prefWidth="90"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;
                               -fx-background-radius: 8;"
                        text="Gửi"/>
            </HBox>
        </VBox>
    </center>

    <!-- 👥 DANH SÁCH NGƯỜI DÙNG -->
    <right>
        <VBox prefWidth="230" spacing="10"
              style="-fx-background-color: #f1f1f1; -fx-padding: 15;
                     -fx-border-color: #ddd; -fx-border-width: 0 0 0 1;">
            <Label text="👥 Người dùng online:">
                <font><Font name="Segoe UI Bold" size="14.0"/></font>
            </Label>
            <ListView fx:id="listOnlineUsers"
                      style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #ccc;"
                      VBox.vgrow="ALWAYS">
                <placeholder><Label text="Chưa có ai online"/></placeholder>
            </ListView>
        </VBox>
    </right>
</BorderPane>
